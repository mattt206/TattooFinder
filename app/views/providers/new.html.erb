<div class="container">
  <div class="row">
    <div class = "col-12">
      <%= simple_form_for [@provider]  do |f| %>
        <p><%= f.input :name %></p>
        <p><%= f.input :address %></p>
        <p><%= f.input :start_time %></p>
        <p><%= f.input :close_time %></p>
        <p>Selecciona varias fotos de tu estudio: <%= f.input :photos, as: :file, input_html: { multiple: true } %></p>

        <div>
          <div class="d-flex flex-wrap" style="background-color:grey;">
            <%= f.input :category, as: :check_boxes, collection: Provider.categories.keys  %>
            <%#= f.collection_check_boxes :category, Provider.categories, :first, :last, include_blank: false %>
          </div>
        </div>

        <div class="form-actions d-flex justify-content-center">
          <%= f.button :submit, "Save", class: "btn btn-success mx-2 my-3"%>
        </div>
          <%= link_to "Back", providers_path, class: "btn btn-primary"%>
      <% end %>

    </div>
  </div>
</div>
